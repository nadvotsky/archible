{
  //
  // Updates, telemetry and 3rd party integrations.
  //
  "auto_update": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "assistant": {
    "enabled": false,
    "button": false,
    "version": "1"
  },
  "projects_online_by_default": false,
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },

  //
  // Extensions.
  //
  "auto_install_extensions": {
    "nord": true
  },

  //
  // Opacity and fading.
  //
  // "inactive_opacity": 0.9,
  // "unnecessary_code_fade": 0.3,
  // "border_size": 1.0,

  //
  // Theme and fonts.
  //
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Nord"
  },
  "buffer_font_family": "{{ ga_fonts_mono }}",
  "buffer_font_fallbacks": [
    "{{ ga_fonts_icon }}",
    "{{ ga_fonts_emoji }}"
  ],
  "buffer_font_size": {{ ga_fonts_mono_sz_small | ga_scale(ga_scaling) }},
  "ui_font_size": {{ ga_fonts_mono_sz_big |  ga_scale(ga_scaling) }},

  //
  // Startup.
  //
  "restore_on_startup": "none",

  //
  // UI tweaks.
  //
  "current_line_highlight": "all",
  "selection_highlight_debounce": 0,
  "cursor_blink": false,
  "modal_max_width": "full",
  "scrollbar": {
    "show": "always",
    "cursors": false
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "show_close_button": "always"
  },
  "project_panel": {
    "default_width": 350,
    "entry_spacing": "standard",
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "always"
    }
  },
  "outline_panel": {
    "default_width": 350,
    "dock": "right",
    "auto_fold_dirs": false,
    "scrollbar": {
      "show": "always"
    }
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "terminal": {
    "copy_on_select": true,
    "scrollbar": {
      "show": "always"
    }
  },

  //
  // Diagnostics.
  //
  "diagnostics": {
    "inline": {
      "enabled": true
    },
    "update_with_cursor": true,
    "use_rendered": true
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "toggle_on_modifiers_press": {
      "alt": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },

  //
  // Exclusion.
  //
  "file_scan_exclusions": [
    "**/.git",
    "**/.snv",
    "**/.bzr",
    "**/.pixi",
    "**/.helix",
    "**/.dir-locals.el",
    "**/.cproject",
    "**/.project",
    "**/.vscode",
    "**/*.code-workspace",
    "**/*.code-search",
    "**/*.sublime-workspace",
    "**/.idea",
    "**/.vs",
    "**/.zed",
    "**/artifacts",
    "**/release",
    "**/debug",
    "**/out",
    "**/target",
    "**/dist",
    "**/obj",
    "**/.temp",
    "**/.cache",
    "**/tmp",
    "**/var",
    "**/run",
    "**/.local",
    "**/*.log",
    "**/.venv",
    "**/venv",
    "**/.dotnet",
    "**/.packages",
    "**/vcpkg_installed",
    "**/node_modules",
    "**/bower_components"
  ],

  //
  // Code editing.
  //
  // "enable_language_server": true,
  "remove_trailing_whitespace_on_save": true,
  "soft_wrap": "editor_width",
  // "preferred_line_length": 120,
  "wrap_guides": [
    80,
    120
  ]
}
