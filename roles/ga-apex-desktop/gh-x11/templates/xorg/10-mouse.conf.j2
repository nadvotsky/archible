Section "InputClass"
    Identifier "mouse"
    Driver "libinput"

    MatchIsPointer "on"

    Option "ScrollMethod" "button"
    Option "ScrollButton" "2"
    Option "ScrollButtonLock" "true"
    Option "AccelProfile" "{{ ga_mouse_accel }}"
    Option "AccelSpeed" "{{ ga_mouse_speed }}"
EndSection
