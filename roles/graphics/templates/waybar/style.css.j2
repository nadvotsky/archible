{%- set _spacing_thin = "{}px".format([spacing.thin | scale(scaling.real), 1] | max) -%}
{%- set _spacing_small = "{}px".format(spacing.small | scale(scaling.real)) -%}
{%- set _spacing_medium = "{}px".format(spacing.medium | scale(scaling.real)) -%}
{%- set _spacing_big = "{}px".format(spacing.big | scale(scaling.real)) -%}

{%- set _spacing_text = spacing.small | scale(scaling.real) -%}
{%- set _spacing_icon = (spacing.small * 2) | scale(scaling.real) -%}

{%- set _font_sans_serif_size = "{}px".format(fonts.sans_serif.sizes.medium | scale(scaling.real)) -%}
{%- set _font_icon_size = "{}px".format(fonts.icon.sizes.medium | scale(scaling.real)) -%}

window#waybar {
    font: 600 {{ _font_sans_serif_size }} sans-serif;

    color: {{ preset.foreground }};
    background-color: {{ preset.inactive }};
}

window#waybar > box {
    margin-top: {{ _spacing_medium }};
    margin-bottom: {{ _spacing_medium }};

    margin-left: {{ _spacing_big }};
    margin-right: {{ _spacing_big }};
}

.module, #workspaces {
    border: 1px solid {{ preset.active }};
}

.module.warn, .module.muted {
    border: 1px solid {{ preset.important }};
}

#tray {
    border: 0;
    padding-right: {{ _spacing_medium }};
}

button {
    color: {{ preset.foreground }};

    border: 0;
    margin: 0;

    padding: 0;
    padding-left: {{ _spacing_medium }};
    padding-right: {{ _spacing_medium }};

    box-shadow: none;
    text-shadow: none;
    background: none;
    transition: none;

    min-height: 0;
    min-width: 0;
}

button.active {
    color: {{ preset.accent }};
}

button.urgent {
    color: {{ preset.important }};
}

tooltip {
    border-radius: 0;
    border: {{ _spacing_thin }} solid {{ preset.active }};
}

tooltip * {
    box-shadow: none;
    text-shadow: none;
}

tooltip.background {
    background: {{ preset.inactive }};
}