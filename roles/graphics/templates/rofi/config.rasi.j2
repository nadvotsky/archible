{%- set _spacing_thin = "{}px".format(spacing.thin | scale(scaling.real)) -%}

{%- set _spacing_small = "{}px".format(spacing.small | scale(scaling.real)) -%}
{%- set _spacing_small_left = "0 0 0 {}".format(_spacing_small) -%}

{%- set _spacing_medium = "{}px".format(spacing.medium | scale(scaling.real)) -%}
{%- set _spacing_medium_left = "0 0 0 {}".format(_spacing_medium) -%}
{%- set _spacing_medium_top_right_bottom = "{0} {0} {0} 0".format(_spacing_medium) -%}

{%- set _spacing_big = "{}px".format(spacing.big | scale(scaling.real)) -%}

{#
    Spacing is basically calculated as:
        left margin of the input bar
        left margin of the textbox-prompt-colon
        ">" character size of the textbox-prompt-colon
        right margin of the textbox-prompt-colon
#}
{%- set _spacing_listview = "{0} {0} {0} {1}px".format(
    _spacing_medium,
    (spacing.medium + spacing.medium + (fonts.monospace.sizes.big / 2) + spacing.medium) | scale(scaling.real)
) -%}


configuration {
    modes: [ "window", "drun", "run", "emoji" ];
    plugins: false;

    dpi: {{ scaling.ethalon }};
    scroll-method: 1;

    icon-theme: "{{ icons.launcher.name }}";
    show-icons: true;
    run,drun {
        fallback-icon: "application-gnunet-directory";
    }

    matching: "prefix";
    //matching-negate-char: '!';
    tokenize: true;

    drun-display-format: "{name} [<small><i>({exec})</i></small>]";
    drun-show-actions: true;

    kb-move-front: "Alt+a";
    kb-move-end: "Alt+e";

    kb-move-word-forward: "Alt+Right";
    kb-move-word-back: "Alt+Left";

    kb-remove-word-back: "Alt+w,Control+BackSpace";
    kb-remove-to-eol: "Alt+k";
    kb-remove-to-sol: "Alt+d";

    kb-secondary-copy: "";
    kb-cancel: "Escape,Control+c,Super+q";

    kb-mode-previous: "Alt+ISO_Left_Tab";
    kb-mode-next: "Alt+Tab";
}

window {
    padding: {{ _spacing_big }};
    background-color: {{ preset.inactive }};
    border-color: {{ preset.active }};
    border: {{ _spacing_medium }};

    font: "monospace {{ fonts.monospace.sizes.big | scale(scaling.real) }}px";
}

mainbox {
    children: [ "mode-switcher", "inputbar", "listview" ];
}

mode-switcher {
    padding: {{ _spacing_medium }};
}

button {
    cursor: pointer;
    text-color: {{ preset.accent }};
}

button selected {
    background-color: {{ preset.accent }};
    text-color: {{ preset.inactive }};
}

inputbar {
    padding: {{ _spacing_medium }};
    spacing: 0px ;
    text-color: {{ preset.accent }};
    children: [ "textbox-prompt-colon", "entry" ];
}

textbox-prompt-colon {
    padding: {{ _spacing_medium_top_right_bottom }};
    margin: 0px 0.3000em 0.0000em 0.0000em ;
    expand: false;
    str: "î‚±";
    text-transform: bold;
    text-color: {{ preset.accent }};
}

entry {
    cursor: text;
    
    text-color: {{ preset.accent }};

    padding: {{ _spacing_medium }};
    border-color: {{ preset.accent }};
    border: {{ _spacing_thin }};

    placeholder-color: {{ preset.unimportant }};
    placeholder: "Type to filter";
}

listview {
    fixed-height: false;
    dynamic: false;
    scrollbar: true;
    cycle: true;
    columns: 1;

    border: none;

    margin: {{ _spacing_listview }};
}

scrollbar {
    width: {{ _spacing_big }};
    handle-color: {{ preset.accent }};
    margin: {{ _spacing_medium_left }};
}

element {
    cursor: pointer;
    spacing: {{ _spacing_medium_left }};
    highlight: bold;
}

element-text {
    padding: {{ _spacing_small }};
}

element-icon {
    padding: {{ _spacing_small }};
}

element normal.normal, element alternate.normal {
    background-color: {{ preset.inactive }};
    text-color: {{ preset.accent }};
}

element normal.urgent, element alternate.urgent {
    background-color: {{ preset.inactive }};
    text-color: {{ preset.important }};
}

element normal.active, element alternate.active {
    background-color: {{ preset.inactive }};
    text-color: {{ preset.foreground }};
}

element selected.normal {
    background-color: {{ preset.accent }};
    text-color: {{ preset.inactive }};
}

element selected.urgent {
    background-color: {{ preset.accent }};
    text-color: {{ preset.important }};
}

element selected.active {
    background-color: {{ preset.accent }};
    text-color: {{ preset.foreground }};
}
