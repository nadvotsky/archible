    {% for _bind in keys
        | parse_binds(actions_map=_keybinds, **_parse_kwargs)
        | selectattr("mode_name", "in", _filter)
    %}
        {% set _action = _bind.action.subs %}
        {% set _line = _bind.line | quote %}
        {% if _action is string %}
