{%- set _indent = {"space": 4} -%}

{%- set _dpi = scaling.ethalon | scale(scaling.real) -%}

{%- set _spacing_thin = [spacing.thin | scale(scaling.real), 1] | max -%}
{%- set _spacing_small = spacing.small | scale(scaling.real) -%}
{%- set _spacing_medium = spacing.medium | scale(scaling.real) -%}
{%- set _spacing_big = spacing.big | scale(scaling.real) -%}
{%- set _spacing_gap = (spacing.big * 2) | scale(scaling.real) -%}

{%- set _font = fonts.sans_serif -%}
{%- set _font_size = _font.sizes.medium | scale(scaling.real) -%}
{%- set _font_offset = _font.offsets.medium | scale(scaling.real) -%}
{%- set _font_fontconfig = "sans-serif:style=semibold:pixelsize={}".format(_font_size) | quote -%}

{%- set _preset_accent = preset.accent | quote -%}
{%- set _preset_foreground = preset.foreground | quote -%}
{%- set _preset_background = preset.background | quote -%}
{%- set _preset_important = preset.important | quote -%}
{%- set _preset_active = preset.active | quote -%}
{%- set _preset_inactive = preset.inactive | quote -%}
{%- set _preset_border = preset.border | quote -%}

{%- set _extras = [
    ["graphics-x11-picom", "graphics-x11-compositor"] | is_tagged(ansible_run_tags, ansible_skip_tags) | ternary(
        ["picom", "--daemon"], false,
    ),
    ["hsetroot", "-solid", "'{}'".format(preset.background)],
    ["xsetroot", "-cursor_name", "left_ptr"],
    ["graphics-bar", "graphics-x11-polybar"] | is_tagged(ansible_run_tags, ansible_skip_tags) | ternary(
        ["polybar", "--quiet", "&"], false,
    ),
    ["graphics-x11-dunst", "graphics-notifications"] | is_tagged(ansible_run_tags, ansible_skip_tags) | ternary(
        ["dunst", "&"], false,
    ),
    ["numlockx", "on"],
] -%}
{# ["/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"] #}
{%- macro _extras_render() -%}
    {% for _line in _extras | reject("false") %}
        {{ "{" }}{{ _line | map("quote") | join(", ") }}{{ "}" }},
    {% endfor %}
{%- endmacro -%}

{%- macro _monitors_render() -%}
    {% set _acc = {"width": 0, "height": 0} -%}
    {% set _dim = "width" if monitors.stack == "horizontal" else "height" -%}
    {##}
    {% for _mon_name, _mon in monitors.outputs.items() %}
        {
            name = "{{ _mon_name }}",
            index = {{ loop.index0 }},
            dims = "{{ _mon.width }}x{{ _mon.height }}+{{ _acc.width }}+{{ _acc.height }}",
            first_tag = "{{ _mon_name | workspace_prefix(loop.first) }}1",
        },
        {% set _ = _acc.__setitem__(_dim, _acc[_dim] + _mon[_dim]) %}
    {% endfor %}
{%- endmacro %}

{%- set _tags_map = {"index": 0} %}
{%- macro _tags_render() -%}
    {% for _mon_name, _mon in monitors.outputs.items() %}
        {% set _is_first = loop.first %}
        {% set _prefix = _mon_name | workspace_prefix(_is_first) %}
        {% for _ in range(_mon.workspaces) %}
            {% set _name = "{}{}".format(_prefix, loop.index) %}
            {##}
            {% set _ = _tags_map.__setitem__(_tags_map.index, {"name": _name, "monitor": _mon_name}) %}
            {% set _ = _tags_map.__setitem__("index", _tags_map.index + 1) %}
            {##}
            {% set _min = 1 %}
            {% set _max = _mon.workspaces %}
            {% set _next = "{}{}".format(_prefix, (loop.index - _min + 1) % (_max - _min + 1) + _min) %}
            {% set _prev = "{}{}".format(_prefix, (loop.index - _min - 1) % (_max - _min + 1) + _min) %}
            {##}
            {name = {{ _name | quote }}, next = {{ _next | quote }}, prev = {{ _prev | quote }}},
        {% endfor %}
        {##}
        {% if _is_first %}
            {name = "{{ wms.scratch }}"},
        {% endif %}
    {% endfor %}
{%- endmacro -%}

{%- set _parse_kwargs = dict(
    modifiers_map={
        "shift": "Shift",
        "super": "Mod4",
        "alt": "Mod1",
        "ctrl": "Control",
    },
    keys_map={
        "Backspace": "BackSpace",
        "MouseLeft": "Button1",
        "MouseMiddle": "Button2",
        "MouseRight": "Button3",
        "MouseNext": "Button8",
        "MousePrev": "Button9",
        "Tilde": "grave",
        "CapsLock": "Caps_Lock",
    },
    sep=("-", "-"),
    merge_shift=false,
) -%}

{%- macro _tags_keybinds_render() -%}
    {% set _index_to_mon = [] %}
    {% for _mon_name, _mon in monitors.outputs.items() %}
        {% set _ = _index_to_mon.extend([_mon_name] * _mon.workspaces) %}
    {% endfor %}
    {##}
    {% for _bind in keys
        | parse_binds(actions_map=[("workspaces", None)], **_parse_kwargs)
        | selectattr("mode_name", "eq", "wm")
    %}
        [{{ _bind.line | quote }}] = {
            "and",
                "AND", "focus_monitor", "{{ _tags_map[loop.index0].monitor }}",
                "AND", "use", "{{ _tags_map[loop.index0].name }}", 
        },
    {% endfor %}

    {% for _bind in keys
        | parse_binds(actions_map=[("workspaces_move", None)], **_parse_kwargs)
        | selectattr("mode_name", "eq", "wm")
    %}
        [{{ _bind.line | quote }}] = {"move", "{{ _tags_map[loop.index0].name }}"},
    {% endfor %}

    {% for _bind in keys
        | parse_binds(actions_map=[("tabs", None)], **_parse_kwargs)
        | selectattr("mode_name", "eq", "wm")
    %}
        [{{ _bind.line | quote }}] = {"focus_nth", "{{ loop.index0 }}"},
    {% endfor %}
{%- endmacro -%}

{%- macro _scratch() -%}
    "or",
        "OR", "and",
            "AND", "compare", "tags.focus.name", "=", "{{ wms.scratch }}",
            "AND", "use_previous",
        "OR", "use", "{{ wms.scratch }}",
{%- endmacro -%}

{%- macro _netns() -%}
    "spawn", "rofi",
        "-show", "drun",
        "-display-drun", "drun (network namespaced)",
        "-run-command", "vopono exec -- {cmd}",
{%- endmacro -%}

{%- macro _screenshot_clip() %}
    "spawn", "bash", "-c",
        "shotgun -f png -g $(hacksaw) - | xclip -t 'image/png' -selection clipboard"
{%- endmacro -%}

{%- macro _screenshot_file() -%}
    {% set _xdg_pictures = "{}/{}".format(users.user.home, users.user.xdg.pictures) %}
    "spawn", "bash", "-c",
        "shotgun -f png -g $(hacksaw) '{{ _xdg_pictures }}/shot-$(date +%s).png'",
{%- endmacro -%}

{%- macro _cut() -%}
    "or",
        "OR", "and",
            "AND", "compare", "clients.focus.my_flagged", "=", "true",
            "AND", "set_attr", "clients.focus.my_flagged", "false",
        "OR", "chain",
            "SEP", "new_attr", "bool", "clients.focus.my_flagged",
            "SEP", "set_attr", "clients.focus.my_flagged", "true",
{%- endmacro -%}

{%- macro _paste() -%}
    "foreach", "CLIENT", "clients",
        "sprintf", "ATTR", "%c.my_flagged", "CLIENT", "and",
            "AND", "compare", "ATTR", "=", "true",
            "AND",
                "sprintf", "WINIDATTR", "%c.winid", "CLIENT",
                "substitute", "WNDID", "WINIDATTR",
                "bring", "WNDID",
            "AND",
                "set_attr", "clients.focus.my_flagged", "false",
{%- endmacro -%}

{%- macro _split_v() -%}
    "chain",
        "SEP", "split", "bottom", 0.5,
        "SEP", "focus", "down",
{%- endmacro -%}

{%- macro _split_h() -%}
    "chain",
        "SEP", "split", "right", 0.5,
        "SEP", "focus", "right",
{%- endmacro -%}

{%- macro _notifications() -%}
    "spawn", "bash", "-c",
        "dunstctl history-pop $(" ..
            "dunstctl history |" ..
            "jq --raw-output '.data[][] | [.id.data, .appname.data, .summary.data] | @tsv' |" ..
            "rofi -dmenu -i | " .. 
            "awk '{ print ($1 ? $1 : -1); }'" ..
        ")",
{%- endmacro -%}

