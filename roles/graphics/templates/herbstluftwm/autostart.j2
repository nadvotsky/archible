                "{}{}{}".format("{", _action | split(" ") | map("quote") | join(", "), "}")
            }},
        {% else %}
            [{{ _line }}] = {
                {{ _action() | relative_indent(times=5, **_indent) }}
            },
        {% endif %}
    {% endfor %}
