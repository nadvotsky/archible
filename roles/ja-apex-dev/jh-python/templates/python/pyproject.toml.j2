[project]
name = "python-template"
version = "1.0.0"
description = "An example python template"
keywords = ["example", "template"]
requires-python = ">=3.12"
readme = "README.md"
dependencies = []

[[project.authors]]
name = "{{ ca_info_full }}"
email = "{{ ca_info_mail }}"

[project.license]
text = "MIT"

[project.urls]
homepage = "https://github.com/python/cpython"

[project.optional-dependencies]

[dependency-groups]
dev = [
    "ruff",
    "mypy",
]
test = ["pytest"]

[tool.pytest.ini_options]
pythonpath = ["src"]

[tool.mypy]
pretty = true
strict = true
warn_unreachable = true
warn_return_any = true
warn_unused_ignores = true
warn_redundant_casts = true

[tool.ruff]
preview = true
fix = true

line-length = 80
indent-width = 4

include = ["{src,tests}/**/*.{py,pyi,ipynb}", "**/pyproject.toml"]

[tool.ruff.format]
indent-style = "space"
line-ending = "lf"
quote-style = "double"
skip-magic-trailing-comma = true 
docstring-code-format = true

[tool.ruff.lint]
select = ["ALL"]
ignore = ["D203", "D213", "COM812"]

[tool.ruff.lint.isort]
split-on-trailing-comma = false

[tool.ruff.lint.per-file-ignores]
"tests/**.py" = ["D", "CPY", "INP", "S101"]
