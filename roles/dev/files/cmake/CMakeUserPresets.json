{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31
  },
  "configurePresets": [
    {
      "name": "clang",
      "displayName": "clang+lld",
      "description": "Compile using the LLVM toolset.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_USING_LINKER_LLD": "-fuse-ld=lld",
        "CMAKE_C_FLAGS": "-march=native -mtune=native",
        "CMAKE_C_FLAGS_RELEASE": "-flto=thin",

        "CMAKE_CXX_COMPILER": "clang",
        "CMAKE_CXX_USING_LINKER_LLD": "-fuse-ld=lld",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -march=native -mtune=native",
        "CMAKE_CXX_FLAGS_RELEASE": "-flto=thin",

        "CMAKE_EXE_LINKER_FLAGS_RELEASE": "-strip-all"
      },
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang-build",
      "configurePreset": "clang"
    }
  ],
  "testPresets": [
    {
      "name": "clang-build",
      "configurePreset": "clang"
    }
  ],
  "packagePresets": [
    {
      "name": "clang-release",
      "configurePreset": "clang",
      "packageName": "cmake-template",
      "packageVersion": "1.0.0",
      "packageDirectory": "dist"
    }
  ],
  "workflowPresets": [
    {
      "name": "clang-workflow",
      "steps": [
        {
          "type": "configure",
          "name": "default"
        },
        {
          "type": "build",
          "name": "default"
        },
        {
          "type": "test",
          "name": "default"
        }
      ]
    }
  ]
}